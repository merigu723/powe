
  <context>
  
    <input pattern="(hello|hi)*">
    <output value="Hello $UserName!" if="full($UserName)" />
   
    <context if="empty($UserName)">
      <output value="Hi! What is your name?" />  
      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Nice to meet you $UserName!"/>
      </input>
 
    </context>
   
    <context if="full($UserName)">
    <output value="Hello $UserName!, no olvides visitar nuestro blog: http://powerjkpop.blogspot.com/
                   
                   ¿Si deseas saber el Numero de canal de otra ciduad para ver nuestra programación por favor digita el zipcode de tu ciudad"/>
      <input pattern="$Text">
        <var name="zipcode" value="$Text" scope="zipcode"/>
      <output value="Hi dude!" if='full($zipcode) and $zipcode == "(200|201|202)"'/>
      </input>
 
   
    </context>
 
  </input>
</context>
